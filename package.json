{
  "name": "shopperino",
  "version": "0.1.0",
  "description": "Shopperino is a Firebase-based personal shopping list web app",
  "keywords": [
    "shopping",
    "shopping list"
  ],
  "author": {
    "name": "Joonas Tiala",
    "email": "joonas.tiala@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jtiala/shopperino.git"
  },
  "bugs": {
    "url": "https://github.com/jtiala/shopperino/issues"
  },
  "private": false,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:styles": "postcss src/styles/tailwind.css -o src/styles/index.css",
    "prebuild": "NODE_ENV=production npm run build:styles",
    "prestart": "npm run build:styles",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,css,scss,html,md,yml,yaml}'",
    "lint:ts": "eslint src/**/*.{ts,tsx}",
    "lint:ts:fix": "eslint src/**/*.{ts,tsx} --fix",
    "lint:other": "prettier --list-different '**/*.{json,md,yml,yaml}'",
    "lint": "npm run lint:ts && npm run lint:other",
    "lint:fix": "npm run lint:ts:fix && npm run format",
    "deploy": "firebase deploy --token $REACT_APP_FIREBASE_TOKEN"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.4",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "autoprefixer": "^9.7.3",
    "classnames": "^2.2.6",
    "firebase": "^7.6.1",
    "postcss-cli": "^7.0.0",
    "postcss-import": "^12.0.1",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "tailwindcss": "^1.1.4",
    "typescript": "^3.7.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
