rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /items/{item} {
      allow read:
        if request.auth.uid != null
        && request.auth.uid == resource.data.uid;

      allow write:
        if request.auth.uid != null
        && (request.auth.uid == resource.data.uid
        || request.auth.uid == request.resource.data.uid);
    }
    match /lists/{list} {
      allow read:
        if request.auth.uid != null
        && request.auth.uid == resource.data.uid;

      allow write:
        if request.auth.uid != null
        && (request.auth.uid == resource.data.uid
        || request.auth.uid == request.resource.data.uid);
    }
  }
}